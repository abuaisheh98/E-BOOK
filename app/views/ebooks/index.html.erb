<br>
<div class="container">
  <table class="table table-striped table-hover table-bordered">
    <thead>
    <tr>
      <th>Book Name</th>
      <th>Author Name</th>
      <th>Description</th>
      <th>Publish Year</th>
      <th>Ratting</th>
    </tr>
    </thead>
    <tbody>
    <% @ebooks.each do |book| %>
      <tr>
        <td><%= book.book_name %></td>
        <td><%= book.author_name %></td>
        <td><%= book.description %></td>
        <td><%= book.publish_year %></td>
        <td><%= book.rate %></td>
          <td>
            <%= link_to 'Show', book ,class:"btn btn-outline-success"%>
        </td>
        <td><%= link_to 'Edit', edit_ebook_path(book),class:"btn btn-primary" %></td>
        <td><%= link_to 'Delete', book, data: { "turbo-method": :delete },class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<center>
  <%= link_to 'Add Book', new_ebook_path ,class:"btn btn-secondary" %>
</center>
